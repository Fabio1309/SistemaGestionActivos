@model IEnumerable<AssetManager.Models.UsuarioConRolesViewModel>

@{
    ViewData["Title"] = "Administración de Usuarios";
}

<!-- ... (código de las notificaciones se queda igual) ... -->

<div class="card shadow-sm">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h4 class="mb-0">@ViewData["Title"]</h4>
        <a class="btn btn-primary" asp-action="CrearUsuario">
            <i class="fas fa-plus-circle me-2"></i>Crear Nuevo Usuario
        </a>
    </div>
    <div class="card-body">
        @if (!Model.Any())
        {
            <div class="text-center p-4">
                <p class="text-muted">No hay usuarios registrados.</p>
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead>
                        <tr>
                            <th>Nombre Completo</th>
                            <th>Email / Usuario</th>
                            <th>Edad</th>
                            <th>Roles</th> <!-- NUEVA COLUMNA -->
                            <th class="text-end">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td><strong>@item.Usuario.NombreCompleto</strong></td>
                                <td>@item.Usuario.Email</td>
                                <td>
                                    @{
                                        var today = DateTime.Today;
                                        var age = today.Year - item.Usuario.FechaNacimiento.Year;
                                        if (item.Usuario.FechaNacimiento.Date > today.AddYears(-age)) age--;
                                    }
                                    @age años
                                </td>
                                <!-- NUEVA SECCIÓN PARA MOSTRAR ROLES -->
                                <td>
                                    @if (item.Roles.Any())
                                    {
                                        foreach (var role in item.Roles)
                                        {
                                            <span class="badge bg-primary me-1">@role</span>
                                        }
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Sin rol</span>
                                    }
                                </td>
                                <td class="text-end">
                                    <a class="btn btn-primary btn-sm" asp-action="GestionarRoles" asp-route-userId="@item.Usuario.Id">
                                        <i class="fas fa-user-shield me-2"></i>Gestionar Roles
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        // Script para ocultar notificaciones después de 5 segundos
        document.addEventListener('DOMContentLoaded', function () {
            var toastElList = [].slice.call(document.querySelectorAll('.toast.show'));
            var toastList = toastElList.map(function (toastEl) {
                var toast = new bootstrap.Toast(toastEl, { delay: 5000 });
                toast.show();
            });
        });
    </script>
}

