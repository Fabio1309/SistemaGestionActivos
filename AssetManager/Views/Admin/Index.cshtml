@model IEnumerable<AssetManager.Models.UsuarioConRolesViewModel>

@{
    ViewData["Title"] = "Administración de Usuarios";
}

<div class="toast-container position-fixed top-0 end-0 p-3" style="z-index: 1055;">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="toast show align-items-center text-white bg-success border-0" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="d-flex"><div class="toast-body">@TempData["SuccessMessage"]</div><button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button></div>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="toast show align-items-center text-white bg-danger border-0" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="d-flex"><div class="toast-body">@TempData["ErrorMessage"]</div><button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button></div>
        </div>
    }
</div>

<div class="card shadow-sm">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h4 class="mb-0">@ViewData["Title"]</h4>
        <a class="btn btn-primary" asp-action="CrearUsuario"><i class="fas fa-plus-circle me-2"></i>Crear Nuevo Usuario</a>
    </div>
    <div class="card-body">
        
        @* --- ALERTA DE RESTABLECIMIENTO REUBICADA AQUÍ --- *@
        @if (TempData["ResetLink"] != null)
        {
            <div class="alert alert-info alert-dismissible fade show" role="alert">
                <h5 class="alert-heading"><i class="fas fa-link me-2"></i>Enlace de Restablecimiento Generado</h5>
                <p>Copia el siguiente enlace y envíalo al usuario para que pueda restablecer su contraseña.</p>
                <hr>
                <div class="input-group">
                    <input type="text" id="resetLinkInput" class="form-control" value="@TempData["ResetLink"]" readonly>
                    <button class="btn btn-outline-secondary" type="button" id="copyButton" title="Copiar al portapapeles">
                        <i class="fas fa-copy"></i>
                    </button>
                </div>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <div class="card mb-4">
            <div class="card-body bg-light">
                <form asp-action="Index" method="get">
                    <div class="row g-3 align-items-end">
                        <div class="col-md-6">
                            <label class="form-label">Buscar por Nombre o Email</label>
                            <input type="text" name="searchString" class="form-control" placeholder="Escribe para buscar..." value="@ViewData["CurrentFilter"]" />
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Filtrar por Rol</label>
                            <select name="roleFilter" class="form-select" asp-items="@(ViewData["RolesList"] as SelectList)">
                                <option value="">Todos los roles</option>
                            </select>
                        </div>
                        <div class="col-md-2">
                            <button type="submit" class="btn btn-info w-100"><i class="fas fa-filter me-1"></i>Filtrar</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead>
                    <tr>
                        <th>Nombre Completo</th>
                        <th>Email / Usuario</th>
                        <th>Roles</th>
                        <th>Estado</th>
                        <th class="text-end">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td><strong>@item.Usuario.NombreCompleto</strong></td>
                            <td>@item.Usuario.Email</td>
                            <td>
                                @foreach (var role in item.Roles) { <span class="badge bg-primary me-1">@role</span> }
                            </td>
                            <td>
                                @if (item.Usuario.LockoutEnd.HasValue && item.Usuario.LockoutEnd.Value > DateTimeOffset.UtcNow)
                                {
                                    <span class="badge bg-danger">Desactivado</span>
                                }
                                else
                                {
                                    <span class="badge bg-success">Activo</span>
                                }
                            </td>
                            <td class="text-end">
                                <a class="btn btn-primary btn-sm" asp-action="GestionarRoles" asp-route-userId="@item.Usuario.Id" title="Gestionar Roles">
                                    <i class="fas fa-user-shield"></i>
                                </a>
                                <form asp-action="ToggleUserStatus" method="post" class="d-inline">
                                    <input type="hidden" name="userId" value="@item.Usuario.Id" />
                                    @if (item.Usuario.LockoutEnd.HasValue && item.Usuario.LockoutEnd.Value > DateTimeOffset.UtcNow)
                                    {
                                        <button type="submit" class="btn btn-success btn-sm" title="Activar Usuario">
                                            <i class="fas fa-user-check"></i>
                                        </button>
                                    }
                                    else
                                    {
                                        <button type="submit" class="btn btn-warning btn-sm" title="Desactivar Usuario">
                                            <i class="fas fa-user-slash"></i>
                                        </button>
                                    }
                                </form>
                                <form asp-action="ForzarRestablecimiento" method="post" class="d-inline">
                                    <input type="hidden" name="userId" value="@item.Usuario.Id" />
                                    <button type="submit" class="btn btn-danger btn-sm" title="Forzar Restablecimiento de Contraseña">
                                        <i class="fas fa-key"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@* --- ÚNICA SECCIÓN DE SCRIPTS CON TODO EL CÓDIGO --- *@
@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Script para ocultar notificaciones toast
            var toastElList = [].slice.call(document.querySelectorAll('.toast.show'));
            var toastList = toastElList.map(function (toastEl) {
                var toast = new bootstrap.Toast(toastEl, { delay: 5000 });
                toast.show();
            });

            // Script para el botón de copiar
            const copyButton = document.getElementById('copyButton');
            const resetLinkInput = document.getElementById('resetLinkInput');

            if (copyButton && resetLinkInput) {
                copyButton.addEventListener('click', function () {
                    resetLinkInput.select();
                    document.execCommand('copy');
                    
                    copyButton.innerHTML = '<i class="fas fa-check me-1"></i> Copiado';
                    
                    setTimeout(() => {
                         copyButton.innerHTML = '<i class="fas fa-copy"></i>';
                    }, 2000);
                });
            }
        });
    </script>
}