@model AssetManager.Models.GestionarRolesViewModel

@{
    ViewData["Title"] = "Gestionar Roles";
}

<div class="card shadow-sm">
    <div class="card-header">
        <h4 class="mb-0">@ViewData["Title"]</h4>
    </div>
    <div class="card-body">
        <form asp-action="GestionarRoles">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="UserId" />
            <h5>Usuario: <strong>@Model.UserName</strong></h5>
            <hr />

            <div class="form-group">
                @for (int i = 0; i < Model.Roles.Count; i++)
                {
                    <div class="form-check m-1">
                        <input type="hidden" asp-for="Roles[i].RoleId" />
                        <input type="hidden" asp-for="Roles[i].RoleName" />
                        <input type="checkbox" asp-for="Roles[i].IsSelected" class="form-check-input" />
                        <label class="form-check-label" for="Roles_@(i)__IsSelected">
                            @Model.Roles[i].RoleName
                        </label>
                    </div>
                }
            </div>
            
            <div class="form-group mt-3">
                <input type="submit" value="Guardar Cambios" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>