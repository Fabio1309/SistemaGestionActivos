@model SistemaGestionActivos.Models.PlanMantenimiento

@{
    ViewData["Title"] = "Eliminar Plan";
}

<div class="card shadow-sm border-danger">
    <div class="card-header bg-danger text-white">
        <h4 class="mb-0">@ViewData["Title"]</h4>
    </div>
    <div class="card-body">
        <h5 class="text-danger">¿Estás seguro de que quieres eliminar este plan de mantenimiento?</h5>
        <p>Esta acción no se puede deshacer.</p>
        
        <hr />
        
        <div>
            <dl class="row">
                </dl>
            
            <form asp-action="Eliminar" method="post" class="mt-3">
            @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">Confirmar Eliminación</button>
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </form>
        </div>
    </div>
</div>