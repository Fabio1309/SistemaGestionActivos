@model SistemaGestionActivos.Models.PlanMantenimiento
@using SistemaGestionActivos.Models

@{
    ViewData["Title"] = "Crear Nuevo Plan de Mantenimiento";
}

<h1>@ViewData["Title"]</h1>
<p>Define una tarea recurrente que se aplicará a todos los activos de una categoría.</p>
<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="Titulo" class="control-label"></label>
                <input asp-for="Titulo" class="form-control" placeholder="Ej: Revisión Anual de Aires Acondicionados" />
                <span asp-validation-for="Titulo" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Tarea" class="control-label">Tarea a Realizar</label>
                <textarea asp-for="Tarea" class="form-control" rows="3" placeholder="Ej: Limpieza de filtros, revisión de gas, etc."></textarea>
                <span asp-validation-for="Tarea" class="text-danger"></span>
            </div>
            
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Frecuencia" class="control-label"></label>
                    <select asp-for="Frecuencia" class="form-select" asp-items="Html.GetEnumSelectList<FrecuenciaMantenimiento>()"></select>
                    <span asp-validation-for="Frecuencia" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="Intervalo" class="control-label">Cada (Intervalo)</label>
                    <input asp-for="Intervalo" class="form-control" type="number" min="1" value="1" />
                    <span asp-validation-for="Intervalo" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="FechaProximaEjecucion" class="control-label">Fecha de Inicio</label>
                <input asp-for="FechaProximaEjecucion" class="form-control" type="date" />
                <span asp-validation-for="FechaProximaEjecucion" class="text-danger"></span>
            </div>
            
            <div class="mb-3">
                <label asp-for="CategoriaId" class="control-label">Aplicar a la Categoría</label>
                <select asp-for="CategoriaId" class="form-select" asp-items="ViewBag.CategoriaId">
                    <option value="">-- Seleccione una categoría --</option>
                </select>
                <span asp-validation-for="CategoriaId" class="text-danger"></span>
            </div>

            <div class="form-group mt-4">
                <input type="submit" value="Crear Plan" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>