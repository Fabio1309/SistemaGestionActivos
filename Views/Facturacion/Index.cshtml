@model IEnumerable<SistemaGestionActivos.Models.Factura>

@{
    ViewData["Title"] = "Historial de Facturación";
}

<div class="card shadow-sm">
    <div class="card-header">
        <h4 class="mb-0">@ViewData["Title"]</h4>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead>
                    <tr>
                        <th>Factura ID</th>
                        <th>OT Referencia</th>
                        <th>Fecha Emisión</th>
                        <th>Monto Total</th>
                        <th>Estado</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td><strong>@item.Id</strong></td>
                            <td>OT-@item.OrdenTrabajoId</td>
                            <td>@item.FechaEmision.ToShortDateString()</td>
                            <td>$ @item.MontoTotal.ToString("N2")</td>
                            <td>
                                @if (item.Estado == "Pagada")
                                {
                                    <span class="badge bg-success">@item.Estado</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning text-dark">@item.Estado</span>
                                }
                            </td>
                            <td>
                                <a asp-action="Detalles" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Ver Detalles</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>