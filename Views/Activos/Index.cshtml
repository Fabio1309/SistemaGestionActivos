@model IEnumerable<SistemaGestionActivos.Models.Activo>

@{
    ViewData["Title"] = "Inventario de Activos";
}

<div class="card shadow-sm">
    <div class="card-header bg-light">
        <div class="d-flex justify-content-between align-items-center">
            <h4 class="mb-0 text-primary">@ViewData["Title"]</h4>
            @if (User.IsInRole("Administrador") || User.IsInRole("Gestor de Activos"))
            {
                <a asp-action="Creacion" class="btn btn-primary">
                    <i class="fas fa-plus-circle me-2"></i>Crear Nuevo Activo
                </a>
            }
        </div>
    </div>
    <div class="card-body">
        <div class="card mb-4">
            <div class="card-body bg-light">
                <form asp-action="Index" method="get">
                    <div class="row g-3 align-items-end">
                        <div class="col-md-4">
                            <label class="form-label">Buscar por texto</label>
                            <input type="text" name="searchString" class="form-control" placeholder="Nombre o código..." value="@ViewData["CurrentFilter"]" />
                        </div>
                        <div class="col-md-2">
                            <label class="form-label">Categoría</label>
                            <select name="categoriaId" class="form-select" asp-items="@(ViewData["CategoriasList"] as SelectList)">
                                <option value="">Todas</option>
                            </select>
                        </div>
                        <div class="col-md-2">
                            <label class="form-label">Ubicación</label>
                            <select name="ubicacionId" class="form-select" asp-items="@(ViewData["UbicacionesList"] as SelectList)">
                                <option value="">Todas</option>
                            </select>
                        </div>
                        <div class="col-md-2">
                            <label class="form-label">Estado</label>
                            <select name="estado" class="form-select" asp-items="@(ViewData["EstadosList"] as SelectList)">
                                <option value="">Todos</option>
                            </select>
                        </div>
                        <div class="col-md-2">
                            <div class="d-grid gap-2 d-md-flex">
                                <button type="submit" class="btn btn-info w-100">
                                    <i class="fas fa-filter me-1"></i>Filtrar
                                </button>
                                <a asp-action="Index" class="btn btn-outline-secondary" title="Limpiar Filtros">
                                    <i class="fas fa-sync-alt"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        @if (!Model.Any())
        {
            <div class="text-center p-4">
                <p class="text-muted">No se encontraron activos con los filtros aplicados.</p>
                <a asp-action="Index" class="btn btn-sm btn-secondary">Limpiar Filtros</a>
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.First().nom_act)</th>
                            <th>@Html.DisplayNameFor(model => model.First().cod_act)</th>
                            <th>@Html.DisplayNameFor(model => model.First().Categoria)</th>
                            <th>@Html.DisplayNameFor(model => model.First().Ubicacion)</th>
                            <th>@Html.DisplayNameFor(model => model.First().estado)</th>
                            <th class="text-end">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td><strong>@Html.DisplayFor(modelItem => item.nom_act)</strong></td>
                                <td>@Html.DisplayFor(modelItem => item.cod_act)</td>
                                <td>@Html.DisplayFor(modelItem => item.Categoria.nom_categoria)</td>
                                <td>@Html.DisplayFor(modelItem => item.Ubicacion.nom_ubica)</td>
                                <td>
                                    @{
                                        var badgeClass = "bg-secondary";
                                        if (item.estado?.ToLower() == "operativo" || item.estado?.ToLower() == "disponible") { badgeClass = "bg-success"; }
                                        else if (item.estado?.ToLower() == "en reparación" || item.estado?.ToLower() == "en mantenimiento") { badgeClass = "bg-warning text-dark"; }
                                        else if (item.estado?.ToLower() == "de baja") { badgeClass = "bg-danger"; }
                                        else if (item.estado?.ToLower() == "asignado") { badgeClass = "bg-info text-dark"; }
                                    }
                                    <span class="badge @badgeClass">@Html.DisplayFor(modelItem => item.estado)</span>
                                </td>
                                <td class="text-end">
                                    <div class="btn-group">
                                        <a asp-action="Detalles" asp-route-id="@item.activo_id" class="btn btn-sm btn-outline-info" title="Ver Detalles"><i class="fas fa-eye"></i></a>
                                        
                                        @if (User.IsInRole("Administrador") || User.IsInRole("Gestor de Activos"))
                                        {
                                            <a asp-action="Editar" asp-route-id="@item.activo_id" class="btn btn-sm btn-outline-primary" title="Editar"><i class="fas fa-pencil-alt"></i></a>
                                            
                                            <!-- ===== INICIO DE LA CORRECCIÓN ===== -->
                                            <!-- Usamos un div separado para el dropdown y lo convertimos a 'dropend' -->
                                            <div class="btn-group" role="group">
                                                <button id="btnGroupDrop-@item.activo_id" type="button" class="btn btn-sm btn-outline-secondary dropdown-toggle" 
                                                    data-bs-toggle="dropdown" aria-expanded="false" title="Más Opciones" 
                                                    data-bs-boundary="viewport" data-bs-popper-config='{"strategy":"fixed"}'>
                                                    <i class="fas fa-ellipsis-v"></i>
                                                </button>
                                                <ul class="dropdown-menu" aria-labelledby="btnGroupDrop-@item.activo_id">
                                                    <li>
                                                        <a class="dropdown-item" asp-controller="QrGenerator" asp-action="GenerateQrImage" asp-route-id="@item.activo_id" target="_blank">
                                                            <i class="fas fa-qrcode fa-fw me-2"></i>Ver QR
                                                        </a>
                                                    </li>
                                                    <li>
                                                        <a class="dropdown-item" asp-controller="QrGenerator" asp-action="GeneratePdfLabel" asp-route-id="@item.activo_id">
                                                            <i class="fas fa-print fa-fw me-2"></i>Imprimir Etiqueta
                                                        </a>
                                                    </li>
                                                    <li><hr class="dropdown-divider"></li>
                                                    <li>
                                                        <a class="dropdown-item text-danger" asp-action="Eliminar" asp-route-id="@item.activo_id">
                                                            <i class="fas fa-trash-alt fa-fw me-2"></i>Eliminar
                                                        </a>
                                                    </li>
                                                </ul>
                                            </div>
                                            <!-- ===== FIN DE LA CORRECCIÓN ===== -->
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>